<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Review">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ReviewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Leave a review"
                android:fontFamily="sans-serif-light"
                android:textColor="#273238"
                android:textSize="40sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_background"
                android:numStars="5"
                android:padding="10dp"
                android:progressTint="#FCBF06"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/AddTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Add a tip"
                android:textColor="#273238"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Tip1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/food_back_a"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="$1"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/Tip2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/food_back_a"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/Tip3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/food_back_a"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:text="$10"
                    android:textColor="@color/white"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ReviewComment"
                    android:layout_width="340dp"
                    android:layout_height="160dp"
                    android:background="@drawable/comment_background"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:gravity="start"
                    android:hint="Type your comment"
                    android:inputType="textMultiLine"
                    android:maxLength="120"
                    android:maxLines="4"
                    android:padding="26dp"
                    android:textColor="#8e8e8e"
                    android:textColorHint="#8e8e8e"
                    android:textSize="18dp" />
            </LinearLayout>

            <Button
                android:id="@+id/ReviewSubmit"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:backgroundTint="#273238"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>