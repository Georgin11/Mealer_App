<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientReview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/half_white_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ReviewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Leave a review"
                android:textColor="#273238"
                android:textSize="40sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_background"
                android:numStars="5"
                android:padding="10dp"
                android:progressTint="#FCBF06"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:hint="Add a title"
                android:inputType="textPersonName"
                android:padding="26dp"
                android:textColor="#8e8e8e"
                android:textColorHint="#8e8e8e"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ReviewComment"
                    android:layout_width="340dp"
                    android:layout_height="160dp"
                    android:background="@drawable/comment_background"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:gravity="start"
                    android:hint="Type your comment"
                    android:inputType="textMultiLine"
                    android:maxLength="120"
                    android:maxLines="4"
                    android:padding="26dp"
                    android:textColor="#8e8e8e"
                    android:textColorHint="#8e8e8e"
                    android:textSize="18dp" />
            </LinearLayout>

            <Button
                android:id="@+id/ReviewSubmit"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:backgroundTint="#273238"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/ReviewBack"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="320dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Back"
            android:textColor="#273238" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>