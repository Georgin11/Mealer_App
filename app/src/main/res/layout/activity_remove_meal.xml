<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoveMeal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="320dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="GoBack1"
            android:text="Back"
            android:textColor="#273238" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32sp">

            <TextView
                android:id="@+id/Menu"
                android:layout_width="250dp"
                android:layout_height="275dp" />

            <View
                android:id="@+id/view11"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/InfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Enter the name of the meal to remove"
                android:textColor="#273238"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText_MealName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext_background"

                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:hint="Name of meal"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#8e8e8e"
                android:textColorHint="#8e8e8e"
                android:textSize="18dp" />

            <View
                android:id="@+id/view12"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/REMOVEMEAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:width="260dp"
                android:height="55dp"
                android:backgroundTint="#273238"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:onClick="GoBack"
                android:text="Remove"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>