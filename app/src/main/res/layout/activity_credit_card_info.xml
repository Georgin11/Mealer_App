<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientRegistration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btn_Return"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="659dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="24dp"
            android:onClick="GoBack"
            android:text="GO BACK" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="119dp"
            android:layout_height="29dp"
            android:layout_above="@+id/editTextCardholder"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="10dp"
            android:text="Payment Method"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCardholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="586dp"
            android:ems="10"
            android:hint="Card Holder Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextCardholder"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="-50dp"
            android:ems="10"
            android:hint="Card Number"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextCVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextCardholder"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-100dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="-50dp"
            android:layout_toEndOf="@+id/editTextCardNumber"
            android:ems="10"
            android:hint="CVV"
            android:inputType="number"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="119dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="275dp"
            android:layout_marginBottom="485dp"
            android:text="Billing Address"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextStreetNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="-100dp"
            android:layout_marginBottom="435dp"
            android:layout_toStartOf="@+id/editTextBillingAddress"
            android:ems="10"
            android:hint="No."
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextBillingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-485dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:hint="Street"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextBillingApt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextBillingAddress"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="-50dp"
            android:ems="10"
            android:hint="Apt/Suite (Optional)"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextBillingApt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="-50dp"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextPostal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextBillingApt"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="-50dp"
            android:layout_toEndOf="@+id/editTextCity"
            android:ems="10"
            android:hint="Postal Code"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="25dp"
            android:onClick="onSave"
            android:text="Save" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>