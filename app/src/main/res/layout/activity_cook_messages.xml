<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/half_white_background">

        <Button
            android:id="@+id/backToHomePage"
            android:layout_width="85dp"
            android:layout_height="50dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="320dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="HomePage"
            android:text="Home"
            android:textColor="#273238" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMessagesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Messages"
                android:textColor="#273238"
                android:textSize="40sp" />

            <ListView
                android:id="@+id/lv_Reviews"
                android:layout_width="280dp"
                android:layout_height="400dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnSeeReviews"
                android:layout_marginTop="20dp"
                android:text="Reviews"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="260dp"
                android:height="55dp"
                android:backgroundTint="#273238"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>