<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/InfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Add a meal"
                android:textColor="#273238"
                android:textSize="40sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="320dp"
            android:background="@null"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="GoBack1"
            android:text="Back"
            android:textColor="#273238"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32sp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Select type of cuisine"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/CuisineSpinner"
                android:layout_width="335dp"
                android:layout_height="50dp"
                tools:ignore="SpeakableTextPresentCheck"

                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Select a meal type"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/MealTypeSpinner"
                android:layout_width="335dp"
                android:layout_height="50dp"
                tools:ignore="SpeakableTextPresentCheck"

                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/editText_MealName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:ems="10"
                android:gravity="center"
                android:hint="Name of meal"
                android:inputType="textPersonName"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="sans-serif-light"
                android:padding="16dp"
                android:textColor="#8e8e8e"
                android:textColorHint="#8e8e8e"
                android:textSize="18dp"/>

            <Switch
                android:id="@+id/FeaturedMealCheck"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Featured Meal"
                android:textSize="18dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <View
                android:id="@+id/view10"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/REMOVEMEAL"
                android:onClick="GoBack1"
                android:text="Add meal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="260dp"
                android:height="55dp"
                android:backgroundTint="#273238"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>